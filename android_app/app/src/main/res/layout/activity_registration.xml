<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="9"
    android:orientation="vertical"
    android:layout_height="match_parent"

    android:background="#C7B9B9"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="infoaryan.in.vegmet.Registration">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1.5"
       android:weightSum="2"
       >
    <TextView

        android:layout_width="0dp"
        android:layout_height="match_parent"
       android:layout_weight="1"
        android:text="Registration"
        android:fontFamily="serif"
        android:gravity="center"
        android:drawableRight="@drawable/ic_account_circle_black_24dp"
        android:textSize="25sp"
        android:drawableTint="#707070"
        />
   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:gravity="right"
       >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="SIGN IN"
           android:textColor="#fff"
           android:fontFamily="serif"
           android:textSize="20sp"
           android:gravity="center"
           android:id="@+id/signintext"
           />
   </LinearLayout>

   </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="FULL NAME"
        android:padding="20dp"
        android:layout_gravity="bottom"
        android:inputType="textPersonName"
        android:id="@+id/name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="10 Digit Ph-No."
        android:padding="20dp"
        android:inputType="number|phone"
        android:id="@+id/phonenumber"
        android:layout_gravity="bottom"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Not Verified"
                android:id="@+id/verified"
                android:gravity="center"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send OTP"
                android:id="@+id/sendotp"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/gradient_button"
                android:layout_marginRight="10dp"

                />
        </LinearLayout>

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="ENTER THE OTP "
        android:paddingLeft="10dp"
        android:id="@+id/otprecieved"
        android:inputType="numberPassword"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:text="Location"
        android:drawableRight="@drawable/ic_person_pin_circle_black_24dp"
        android:paddingLeft="10dp"
        android:textColor="#000"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:marqueeRepeatLimit="1"
        android:overScrollMode="always"

        android:inputType="textPostalAddress"
        android:id="@+id/addres"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:weightSum="2"
        >
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Use current location"
            android:id="@+id/usecurrentlocation"
            />
        </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1.6"
       android:gravity="center"
       >
       <Button
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:text="Register"
           android:fontFamily="sans-serif"
           android:clickable="true"
           android:background="@drawable/gradient_button"
           android:shadowDy="6"
           android:shadowDx="3"
           android:id="@+id/registerbutton"
           android:shadowColor="#000"

           />
   </LinearLayout>

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    tools:context="infoaryan.in.vegmet.Home_Consumer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9"

        android:orientation="vertical">
 <androidx.cardview.widget.CardView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1"
     android:layout_margin="15dp"
     android:weightSum="2"
    app:cardElevation="7dp"
    app:cardCornerRadius="15dp"
     android:backgroundTint="#B3B1F7"
     >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:weightSum="2"
         >
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:weightSum="5"
      android:gravity="left"
      >
      <ImageView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:id="@+id/loc_pin"
          android:layout_gravity="center"
          android:src="@drawable/ic_person_pin_circle_black_24dp"/>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="4"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="left"
          android:padding="7dp"
          android:weightSum="2">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:text="You are at:"
              android:gravity="center_vertical"
              android:textColor="#2049F0"
              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:text="Location here"
              android:id="@+id/locationhere"
              android:textColor="#041158"/>
      </LinearLayout>
  </LinearLayout>
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="right"
         android:padding="10dp"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:gravity="center_vertical"
             android:text="Name here:"
             android:textSize="20sp"
             android:id="@+id/namehere"

             android:fontFamily="cursive"
             android:textColor="#091C5C"
                android:layout_marginRight="10dp"
             />
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:foregroundGravity="center"
             android:id="@+id/account"
             android:src="@drawable/ic_assignment_ind_black_24dp"
             />


     </LinearLayout>
     </LinearLayout>
 </androidx.cardview.widget.CardView>//weight is 1
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="2"
    android:layout_marginLeft="15dp"
    android:orientation="vertical">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1.3"
       android:text="Categories "
       android:gravity="center_vertical"
       android:textSize="25sp"
       android:textColor="#000"
       android:fontFamily="casual"

       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:text="crafted for you "
        />

</LinearLayout>
   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="3"
       android:rowCount="2"
       android:columnCount="3"
       >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:orientation="vertical"
        android:weightSum="5"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/veg"
            android:layout_weight="4"
            android:id="@+id/cat_veg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="#000"
            android:text="vegetables"
            android:layout_weight="1"
            />
    </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:orientation="vertical"
           android:weightSum="5"
           >

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:src="@drawable/fruit"
               android:layout_weight="4"

               android:id="@+id/cat_fruit"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:gravity="center"
               android:textColor="#000"
               android:text="fruits"
               android:layout_weight="1"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:orientation="vertical"
           android:weightSum="5"
           >

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:src="@drawable/fav"
               android:layout_weight="4"

               android:id="@+id/cat_seasonal"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text="favorite"
               android:textColor="#000"
               android:gravity="center"
               android:layout_weight="1"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:orientation="vertical"
           android:weightSum="5"
           >

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:src="@drawable/nearest"
               android:layout_weight="4"
                android:padding="10dp"
               android:id="@+id/cat_nearest"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text="Nearest"
               android:textColor="#000"
               android:gravity="center"
               android:layout_weight="1"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:orientation="vertical"
           android:weightSum="5"
           >

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:src="@drawable/sesonal"
               android:layout_weight="4"
               android:id="@+id/cat_favorites"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text="favorites"
               android:textColor="#000"
               android:gravity="center"
               android:layout_weight="1"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:orientation="vertical"
           android:weightSum="5"
           >

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:src="@drawable/fresh"
               android:layout_weight="4"

               android:id="@+id/cat_fresh"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text="fresh"
               android:textColor="#000"
               android:gravity="center"
               android:layout_weight="1"
               />
       </LinearLayout>
   </GridLayout>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"

    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="2"
    app:cardElevation="7dp"
    app:cardCornerRadius="30dp"
    android:backgroundTint="#3D3D3D"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3D3D3D"
        android:weightSum="2"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:text="FastLane->"
        android:fontFamily="casual"
        android:textSize="60sp"
        android:id="@+id/fastlane"
        android:textColor="#fff"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:text="Browse best items fast !!"
            android:fontFamily="cursive"
            android:textSize="25sp"
            android:textColor="#fff"
            />


</LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>


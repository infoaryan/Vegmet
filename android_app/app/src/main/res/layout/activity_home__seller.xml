<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:weightSum="9"
    android:background="#CCCBCB"
    android:orientation="vertical"
    tools:context=".Home_Seller">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="15dp"
        android:weightSum="2"
        app:cardElevation="7dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="#B3B1F7"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="5"
                android:gravity="left"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/loc_pin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_pin_circle_black_24dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:padding="7dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="You are at:"
                        android:gravity="center_vertical"
                        android:textColor="#2049F0"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Location here"
                        android:id="@+id/locationhere"
                        android:textColor="#041158"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="Name here:"
                    android:textSize="20sp"
                    android:id="@+id/namehere"

                    android:fontFamily="cursive"
                    android:textColor="#091C5C"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    android:id="@+id/account"
                    android:src="@drawable/ic_assignment_ind_black_24dp"
                    />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>//weight is 1

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

    android:text="Your Ads"
        android:layout_marginRight="20dp"
    android:id="@+id/title"
    android:fontFamily="casual"
    android:gravity="center_horizontal"
    android:textColor="#fff"
    android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Load"
            android:id="@+id/load"

            android:background="@drawable/gradient_button"
            />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/recycle"
        android:background="@drawable/kk"
      />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#3D3D3D">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/postad"
            android:textColor="#fff"
            android:text="+ POST AD"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"/>


    </androidx.cardview.widget.CardView>
</LinearLayout>